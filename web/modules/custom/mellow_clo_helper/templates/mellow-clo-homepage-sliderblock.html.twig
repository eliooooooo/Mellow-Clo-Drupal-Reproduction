<div class="swiper">
  <div class="swiper-wrapper">
    {% for slide in slides %}
      <a href="{{ slide.link }}" class="swiper-slide h-full">
        <div class="bg-black/25 absolute w-full h-full left-0 top-0"></div>
        <img src="{{ slide.image }}" alt="{{ slide.title }}" class="absolute left-0 top-1/2 -translate-y-1/2"/>
      </a>
    {% endfor %}
  </div>

  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>
