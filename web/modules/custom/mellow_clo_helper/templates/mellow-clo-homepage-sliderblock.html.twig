<div class="swiper">
  <div class="swiper-wrapper">
    {% for slide in slides %}
      <a href="{{ slide.link }}" class="swiper-slide">
        <img src="{{ slide.image }}" alt="{{ slide.title }}" />
      </a>
    {% endfor %}
  </div>

  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>
