<div class="swiper1 !overflow-visible !mb-24">
  <div class="swiper-wrapper overflow-hidden">
    {% for slide in slides %}
      <a href="{{ slide.link }}" class="swiper-slide h-full">
        <div class="bg-black/35 absolute w-full h-full left-0 top-0 z-20"></div>
        <img src="{{ slide.image }}" alt="{{ slide.title }}" class="absolute left-0 top-1/2 -translate-y-1/2 w-full"/>
        <div class="container relative flex flex-col gap-2 h-full justify-center items-center z-30 !pb-16" >
          <h2 class="text-white text-7xl font-bold text-center">{{ slide.title }}</h2>
        </div>
      </a>
    {% endfor %}
  </div>
</div>
