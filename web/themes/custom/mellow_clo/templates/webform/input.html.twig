{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}
{% if ( attributes.type == "text" ) or ( attributes.type == "email" ) %}
  <input{{ attributes.addClass('border border-black/15 w-full px-2.5 py-2 focus:border-black') }} />{{ children }}
{% endif %}

{% if attributes.type == "submit" %}
  <input{{ attributes.addClass('bg-black text-white px-5 py-3 cursor-pointer') }} />{{ children }}
{% endif %}
